<%= simple_form_for(@area, html: {class: 'form-horizontal'}) do |f| %>
  <%= render partial: 'shared/form/error_messages', locals: { resource: @area } %>
  
  <%= f.hidden_field :parent_id %>
  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  
  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>